<?xml version="1.0" encoding="utf-8"?>
<matchbaker.customComponents.TenScaleSeekbarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/seekbar10_min_value"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="center" />

    <SeekBar
        android:id="@+id/seekbar_10"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:max="10" />

    <TextView
        android:id="@+id/seekbar10_max_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:gravity="center" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/seekbar10_current_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="0"
        android:gravity="center" />

</matchbaker.customComponents.TenScaleSeekbarLayout>