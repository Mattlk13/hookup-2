<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hookupandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MaterialTheme">
        <activity android:name=".activities.TestActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.PersonRecyclerViewActivity" />
        <activity android:name=".activities.NavDrawerExampleActivity" />

        <service android:name=".services.HookupMessageService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name=".services.FirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <receiver android:name=".receivers.HookupRequestReceiver">
            <intent-filter>
                <action android:name="HOOKUP_REQUEST_YES_ACTION" />
                <action android:name="HOOKUP_REQUEST_NO_ACTION" />
            </intent-filter>
        </receiver>

        <activity android:name=".activities.MockLocationActivity" />
        <activity
            android:name=".activities.OldGeoLocActivity"
            android:label="@string/title_activity_old_geo_loc"
            android:theme="@style/MaterialTheme"></activity>
    </application>

</manifest>