<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hookupandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MaterialTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyC_bMHvvD4K4JkSn4x4U_t9ySqxJx0OuH8" />

        <activity android:name=".activities.TestActivity" />
        <activity android:name=".MainActivity">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>
        <activity android:name=".activities.PersonRecyclerViewActivity" />
        <activity android:name=".activities.NavDrawerExampleActivity" />
        <activity android:name=".activities.MockLocationActivity" />
        <activity
            android:name=".activities.OldGeoLocActivity"
            android:theme="@style/MaterialTheme">
        </activity>

        <activity
            android:name=".activities.NavDrawerMainActivity"
            android:theme="@style/MaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <service android:name=".services.HookupMessageService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".services.FirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <receiver android:name=".receivers.HookupRequestReceiver">
            <intent-filter>
                <action android:name="HOOKUP_REQUEST_YES_ACTION" />
                <action android:name="HOOKUP_REQUEST_NO_ACTION" />
            </intent-filter>
        </receiver>


    </application>

</manifest>